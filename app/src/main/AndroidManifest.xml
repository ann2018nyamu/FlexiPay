<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ekenya.app.flexipay">

    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="com.android.launcher.permission.UNINSTALL_SHORTCUT" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher_icon"
        android:label="@string/app_name"
        android:testOnly="false"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FlexiPay">
        <activity android:name=".activities.RegisterAccountActivity" android:theme="@style/Theme.FlexiPay"/>
        <activity android:name=".activities.OnBoardingActivity" android:theme="@style/Theme.FlexiPay"/>
        <activity android:name=".activities.MainActivity"  android:theme="@style/Theme.FlexiPay">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>